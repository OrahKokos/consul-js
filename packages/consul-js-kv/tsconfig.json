{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./build",
    "rootDirs": [
      "./src",
      "./tests"
    ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}